<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#edebeb">
    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="12dip"
     android:paddingBottom="12dip"
     android:background="#148af7">
     <ImageView 
         android:id="@+id/detail_item_back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/navigationbar_back"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dip"/>
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18sp" />
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dip"
        android:background="#f9f9f9">
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginBottom="20dip">
	    <ImageView 
	        android:id="@+id/detail_item_picture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/head_default_picture"
	        android:layout_marginRight="10dip"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
		        <TextView
		            android:id="@+id/detail_item_username"
		            android:layout_width="wrap_content"
		        	android:layout_height="0dip"
		        	android:textSize="18sp"
		        	android:layout_weight="1"
		        	android:gravity="center"
		        	android:text="mao"/>
		        <LinearLayout 
		            android:layout_width="wrap_content"
		        	android:layout_height="0dip"
		        	android:layout_weight="1"
		        	android:gravity="center">
		            <TextView 
		                android:id="@+id/detail_item_publishtime"
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:text="2015-1-25"
		        		android:layout_marginRight="10dip"/>
		            <TextView 
		                android:id="@+id/detail_item_fromdevice"
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:text="小米2s"/>
		        </LinearLayout>
		    </LinearLayout>
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
		        <TextView 
		        android:id="@+id/detail_item_delete"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/delete_record_item"
		        android:layout_alignParentRight="true"
		        android:padding="10dip"
		        android:textColor="#d57272"/>
		    </RelativeLayout>
			</LinearLayout>
			<TextView
			    android:id="@+id/detail_item_text"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="18sp"
			    android:text="奥巴马发表了他在白宫的第六份国情咨文。奥巴马忘记了中期选举民主党的惨败，因为他收获了拯救经济的胜果。他兑现了自己的承诺，将深陷金融危机的美国拉出来，并维持美国的全球领导地位。现在看，他做到了。美国经济复苏了，货币政策正常化提上日程。其他主要经济体，则各有硬伤：中国处于经济下行的新常态，日欧深陷通缩窘境。"/>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>

